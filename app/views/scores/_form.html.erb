<%= form_with(model: score, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class='form-group'>
    <%= f.hidden_field :start_time, :value => set_value_of_start_time(start_date, date) %>
  </div>

  <div class='form-group text-left'>
    <%= f.label :score, class: 'new-score-label' %>
    <%= f.number_field :score, class:'form-control', placeholder: 'å††' %>
  </div>

  <div class='form-group text-left'>
    <%= f.label :memo, class: 'new-score-label' %>
    <%= f.text_area :memo, class:'form-control', rows: 2 %>
  </div>

  <%= f.submit nil, class: 'btn btn-primary submit-new-score' %>
<% end %>