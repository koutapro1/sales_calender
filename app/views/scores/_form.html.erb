<div class="new-score-form">
  <%= form_with(model: score, id: 'new-score', local: false) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= hidden_field_tag :start_date, start_date %>

    <div class='form-group'>
      <%= f.hidden_field :start_time, value: start_time %>
    </div>

    <div class='form-group text-left'>
      <%= f.label :score, class: 'new-score-label' %>
      <%= f.number_field :score, class:'form-control', value: "#{score.score == 0 ? "" : score.score}", placeholder: 'å††' %>
    </div>

    <div class='form-group text-left'>
      <%= f.label :memo, class: 'new-score-label' %>
      <%= f.text_area :memo, class:'form-control', rows: 2 %>
    </div>

    <div class="text-left">
      <%= f.submit nil, class: 'btn btn-primary submit-new-score' %>
    </div>
  <% end %>
</div>
