<%= form_with(model: score, class: 'js-new-score-form', local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :start_time, class: "col-2 col-md-1" %>
    <%= f.date_select :start_time, {}, {class: 'form-control', style: 'display: inline-block;width: auto;'} %>
  </div>

  <div class="form-group row">
    <%= f.label :score, class: "col-2 col-md-1" %>
    <%= f.text_field :score, class:'form-control col-4', placeholder: 'å††' %>
  </div>

  <div class="form-group row">
    <%= f.label :memo, class: "col-2 col-md-1" %>
    <%= f.text_area :memo, class:'form-control col-6', rows: 2 %>
  </div>

  <%= f.submit nil, class: 'btn btn-primary' %>
<% end %>