<main class="row">
  <div class="col">
    <div class="new-score-form">
      <button class="btn btn-primary" id="js-toggle-button">▼ 売上追加</button>
      <%= render('form', score: @score) %>
    </div>
    <%= SimpleCalendar::CustomLengthCalendar.new(self, {events: @scores}).render do |date, scores| %>
      <%= date.strftime('%-m/%-d') %>
      <% scores.each do |score| %>
        <div class="score_in_td">
          <%= score.score %>
        </div>
      <% end %>
    <% end %>
  </div>
</main>