<h3><%= start_time.to_date.strftime('%-m/%-d') %> 詳細</h3>
  <% if @searched_score.nil? %>
      <%= render partial: 'scores/form', locals: { score: @score, start_time: start_time } %>
  <% else %>
    <%= render 'score', searched_score: @searched_score %>
  <% end %>
  <%= form_with url: check_scores_searches_path, method: :get, local: true do %>
    <input name="start_time" type="hidden" value="<%= start_time %>">
    <div class="text-left">
      <%= button_tag '日報作成', type: 'submit', class: 'btn btn-success score-detail-button', method: :get %>
    </div>
  <% end %>
