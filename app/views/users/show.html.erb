<div class="profile-page text-center mypage">
  <main>
    <h1>プロフィール</h1>
    <%= link_to '編集', edit_user_path(@user), class: 'btn btn-primary' %>
    <table class="table">
      <tr>
        <th>ユーザーネーム</th>
        <td><%= @user.name %></td>
      </tr>

      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>

    </table>
    <%= link_to '戻る', scores_path %>
  </main>
</div>