<div class="form-page text-center signup-page">
  <main class="form-area">
    <h1>新規ユーザー登録</h1>
    <%= form_with model: @user, local: true do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.text_field :name, placeholder: "ユーザーネーム", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, placeholder: "メールアドレス", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, placeholder: "パスワード", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder: "パスワード確認", class: "form-control" %>
      </div>

      <%= f.submit class: "btn btn-lg btn-primary form-group" %>
    <% end %>
    <%= link_to "ログインページへ", login_path %>
  </main>
</div>
