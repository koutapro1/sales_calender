<h1>ログイン</h1>
<%= form_with url: login_path, local:true do |f| %>
  <div class='field'>
    <%= f.label :name, "名前" %>
    <%= f.text_field :name%>
  </div>
  <div class='field'>
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password%>
  </div>
    <%= f.submit "ログイン" %>
<% end %>
