<div class="form-page text-center">
  <main class="form-area">
    <h1>ログイン</h1>
    <%= form_with url: login_path, local:true do |f| %>
      <div class="form-group">
        <%= f.text_field :name, class: 'form-control', placeholder: "ユーザーネーム" %>
      </div>
      
      <div class="form-group">
        <%= f.password_field :password, class: 'form-control', placeholder: "パスワード" %>
      </div>

      <div class="remember-me">
        <%= check_box_tag :remember, params[:remember], true %>
        <%= label_tag "ログイン状態を維持する" %>
      </div>

      <%= f.submit "ログイン", class: 'btn btn-lg btn-primary' %>
    <% end %>
    
    <%= link_to 'ユーザー登録はこちら', new_user_path %>
  </main>
</div>